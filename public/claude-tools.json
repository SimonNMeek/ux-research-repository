{
  "tools": [
    {
      "name": "list_workspaces",
      "description": "List all workspaces available to the user",
      "input_schema": {
        "type": "object",
        "properties": {},
        "required": []
      }
    },
    {
      "name": "list_projects",
      "description": "List projects in a specific workspace",
      "input_schema": {
        "type": "object",
        "properties": {
          "workspace": {
            "type": "string",
            "description": "The workspace slug (e.g., 'farm-to-fork')"
          }
        },
        "required": ["workspace"]
      }
    },
    {
      "name": "list_documents",
      "description": "List documents in a specific project",
      "input_schema": {
        "type": "object",
        "properties": {
          "workspace": {
            "type": "string",
            "description": "The workspace slug (e.g., 'farm-to-fork')"
          },
          "project": {
            "type": "string",
            "description": "The project slug (e.g., 'user-research')"
          }
        },
        "required": ["workspace", "project"]
      }
    },
    {
      "name": "search_documents",
      "description": "Search for documents across a workspace",
      "input_schema": {
        "type": "object",
        "properties": {
          "workspace": {
            "type": "string",
            "description": "The workspace slug (e.g., 'farm-to-fork')"
          },
          "query": {
            "type": "string",
            "description": "The search query (e.g., 'checkout')"
          }
        },
        "required": ["workspace", "query"]
      }
    }
  ]
}
